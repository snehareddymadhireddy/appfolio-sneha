<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_task_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/edit_task_notes_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (Optional)"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_task_latitude_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude (Optional)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_task_longitude_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude (Optional)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_task_radius_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Radius in Meters (Optional)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/text_view_due_date_label_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date (Optional):"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceBody1"/>

        <Button
            android:id="@+id/button_select_due_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/text_view_selected_due_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            tools:text="No Due Date Selected"/>

    </LinearLayout>
</ScrollView>